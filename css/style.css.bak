  h1, h2 { text-align: center; letter-spacing: 1px; }
    
  h2 { font-size: 1.5vw; }

  a { color: #257eb5; }
  .noMargin { margin: 0px; }

 /* theme colours */
  .dark { color: #333333; }
  .light { color:#e3e3e3; }
  .aqua { color: #37b097; }
  .yellow { color: #e7c41c; }
  .red { color: #ea4c3d; }
  .blue { color: #257db5; }
 

  /* Header */
  .logo {  
    font-family: Loki;
    font-size: 35px;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9;
    margin-left: 4%;
    font-weight: bold;
  }

  nav {
    width: 100%;
    background: #EFF0F3;
    height: 70px;
    position: fixed;
  }
 
nav ul { 
  float: right; 
  margin: 0 4%; 
  font-family: 'Open Sans', 'HelveticaNeue', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-weight: bold;
  height: 70px;
}
 
 nav li { 
  list-style-type: none; 
  float: left;
  font-size: 16px;
  cursor: pointer;
  padding: 0 12px;
  height: 70px;
  line-height: 70px;
}

nav li a { text-decoration: none; }

nav li:hover { background: #257db5; color:white;  }
nav li:hover a { color:white; }

.subMenu { 
  display: none;
  margin: 0;
  position: absolute;
  padding: 7px 2px;
  width: 200px;
  left: 0px;
  top: 43px;
}

.subMenu a { 
  color: white; 
  margin-left: 15px;
}

.subMenu li {
  height: 40px;
  margin: 0;
  float: none;
  line-height: 40px;
  background: #257db5;
  left: -2px;
  position: relative;
}

.subMenu li:hover { background: #37b097; }

.subMenu li:before {
  content: "";
  width: 0;
  height: 0;
  border-top: 5px solid transparent;
  border-left: 10px solid white;
  border-bottom: 5px solid transparent;
  position: absolute;
  display: list-item;
  top: 16px;
}

li.dropDown { position: relative; }
li.dropDown:hover .subMenu { display: block; }

.titles { 
  position: relative;
  top: 50px; 
  font-family: 'Fugaz';
}

/* home page css */
  .homeBannerContainer { 
    align-items: flex-end;
    min-height: 500px;
    align-content: flex-end;
    display: flex;
    justify-content: center;
  }

  .homeBanner { min-height: 500px; position: absolute; top: 0; left: 0; width: 100%; background-position: center top; z-index: -1;}
  .homeBanner.back { background-image: url("../images/back-layer.png"); }
  .homeBanner.middle { background-image: url("../images/middle-layer.png"); }
  .homeBanner.front { background-image: url("../images/front-layer.png"); }

  .name { 
    position: relative;
    top: 20px;
    font-size: 35px;
    background: black;
    max-width: 300px;
    margin: auto;
    padding: 8px 10px;
  }

  .tagline {
    max-width: 700px;
    margin: auto;
    padding: 8px 0 9px 0;
    background: black;
    position: relative;
    top: 0px;
    font-size: 35px;
  }

  .heading {  
    background: #00000066;
    padding: 15px 50px;
    border: #ea4c3d solid 2px; 
    font-size: 4vw; 
    }

  .heading span { filter: drop-shadow(1px 1px 2px #000000c7) }
